<Context path="/dvdthequeDelebarreWylleman" 
		docBase="dvdthequeDelebarreWylleman"
        debug="5" 
		reloadable="true" 
		crossContext="true">
	
	<Logger className="org.apache.catalina.logger.FileLogger"
			prefix="localhost_dvdthequeDelebarreWylleman_log." 
			suffix=".txt"
			timestamp="true"/>
	
	<Resource name="jdbc/dvdtheque" 
			auth="Container"
			type="javax.sql.DataSource" 
			username="lemeur" 
			password="lemeur"
			driverClassName="org.postgresql.Driver" 
			url="jdbc:postgresql://localhost:5432/dvdthequeDelebarreWylleman"
			defaultAutoCommit="false"
			maxActive="10" 
			maxIdle="10"
			maxWait="10000"
			validationQuery="select 1" />
			
